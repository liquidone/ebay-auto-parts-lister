# Enhanced eBay Auto Parts Lister Configuration
# Copy this to .env and configure your settings

# Core API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# eBay API Configuration (Pending Activation)
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_VERIFICATION_TOKEN=ebay_verification_2025_autoparts_secure_token_xyz789

# Enhanced Identification Features (NEW)
# Set to true to enable, false to disable for rollback

# Phase 4: Browser Fallback (Experimental)
ENABLE_BROWSER_FALLBACK=false
BROWSER_FALLBACK_MAX_DAILY=10
BROWSER_FALLBACK_DELAY=30

# Enhanced AI Features
ENABLE_ENHANCED_PROMPTS=true
ENABLE_CONFIDENCE_SCORING=true
ENABLE_FALLBACK_UI=true

# Safety & Monitoring
MAX_API_RETRIES=3
ENABLE_DEBUG_LOGGING=false

# Production Settings
DEBUG=false
ENVIRONMENT=production

# Rollback Instructions:
# To disable all enhanced features instantly:
# ENABLE_BROWSER_FALLBACK=false
# ENABLE_ENHANCED_PROMPTS=false
# ENABLE_FALLBACK_UI=false
# Then restart: systemctl restart ebay-auto-parts-lister
